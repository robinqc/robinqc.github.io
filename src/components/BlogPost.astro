---
interface BlogPostProps {
    title: string;
    description: string;
    author: string;
    link: string;
    thumbnail: string;
}
const {
    title,
    description,
    author,
    link,
    thumbnail
} = Astro.props as BlogPostProps;
---

<div class="blog-post">
    <div class="img-container">
        <a href={link}>
            <img src={thumbnail} alt={title} />
        </a>    
    </div>
    <div class="blog-post__content">
        <h2 class="blog-post__title">
            <a href={link}>{title}</a>
        </h2>
        <p class="blog-post__description">{description}</p>
        <p class="blog-post__author">By {author}</p>
    </div>

<style>
    .blog-post {
        display: flex;
        flex-direction: column;
        margin-bottom: 2rem;
        max-width: 30%;
        min-width: 300px;
        background-color: black;
        height: 400px;
        color: white;
        flex-grow: 1;
        border-radius: 10px;
        transition: all 0.2s ease-in-out;
    }

    .blog-post:hover {
        box-sizing: border-box;
        border: 3px solid black;
        scale: 1.02;
        cursor: pointer;
    }

    .blog-post__content {
        margin-left: 1rem;
        word-wrap: break-word;
        line-break: auto;
    }

    .blog-post__title {
        margin-bottom: 0.5rem;
    }

    .blog-post__description {
        margin-bottom: 0.5rem;
    }

    .blog-post__author {
        font-size: 0.8rem;
        color: #666;
    }
    .img-container {
        width: 100%;
        height: 300px;
        max-height: 300px;
        overflow: hidden;
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>